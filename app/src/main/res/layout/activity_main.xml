<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="00:00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rapText" android:layout_marginTop="108dp"
            app:layout_constraintTop_toBottomOf="@+id/stop" android:textSize="60sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/timeText" android:textSize="60sp"
            android:layout_marginTop="32dp"
            app:layout_constraintVertical_bias="0.131"/>
    <Button
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/timeText"/>
    <Button
            android:text="Stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stop" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/timeText" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" app:layout_constraintStart_toEndOf="@+id/start"
            app:layout_constraintEnd_toStartOf="@+id/reset" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"/>
    <Button
            android:text="Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reset" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/timeText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"/>
    <TextView
            android:text="Rap View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rapview" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/start" android:textSize="18sp"/>
    <Button
            android:text="Rap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rap"
            app:layout_constraintTop_toBottomOf="@+id/stop" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"/>

</android.support.constraint.ConstraintLayout>